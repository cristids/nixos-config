+    }
+  if (off == file_size)
+    return 0;
+
+  if (off + len > file_size)
+    len = file_size - off;
+
+  err = erofs_read_raw_data (inode, (grub_uint8_t *) buf, len, off, &ret);
+  if (err != GRUB_ERR_NONE)
+    return -1;
+
+  return ret;
